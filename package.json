{
  "name": "green2you",
  "version": "1.2.0",
  "private": true,
  "workspaces": [
    "server",
    "frontend"
  ],
  "scripts": {
    "start": "if [ \"$NODE_ENV\" = \"production\" ]; then yarn workspace @green2you/server start; else yarn workspace @green2you/server dev; fi",
    "dev:server": "yarn workspace @green2you/server dev",
    "dev:frontend": "yarn workspace @green2you/frontend start",
    "build:frontend": "yarn workspace @green2you/frontend build",
    "heroku-postbuild": "yarn install && yarn workspace @green2you/frontend build",
    "changeset": "changeset",
    "version": "changeset version",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md,css}\""
  },
  "dependencies": {
    "@changesets/cli": "^2.29.7",
    "moment-timezone": "^0.5.45"
  },
  "packageManager": "yarn@4.10.3",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "eslint": "^9.37.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "prettier": "3.6.2"
  }
}
